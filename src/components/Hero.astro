---
// Hero component for homepage
// Navy background with gold CTAs and photo overlay

export interface Props {
  title: string;
  subtitle: string;
  imageSrc?: string;
  imageAlt?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { title, subtitle, imageSrc, imageAlt = '', primaryCTA, secondaryCTA } = Astro.props;

import Button from './Button.astro';
---

<section class="bg-navy text-white py-20 lg:py-32">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-12">
      <!-- Left: Content -->
      <div class="flex-1 text-center lg:text-left">
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight mb-6">
          {title}
        </h1>
        <p class="text-xl lg:text-2xl text-gray-200 mb-8 leading-relaxed">
          {subtitle}
        </p>

        <!-- CTAs -->
        {
          (primaryCTA || secondaryCTA) && (
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              {primaryCTA && (
                <Button href={primaryCTA.href} variant="primary" size="lg">
                  {primaryCTA.text}
                </Button>
              )}
              {secondaryCTA && (
                <Button
                  href={secondaryCTA.href}
                  variant="secondary"
                  size="lg"
                  class="border-white text-white hover:bg-white hover:text-navy"
                >
                  {secondaryCTA.text}
                </Button>
              )}
            </div>
          )
        }
      </div>

      <!-- Right: Image -->
      {
        imageSrc && (
          <div class="flex-shrink-0">
            <img
              src={imageSrc}
              alt={imageAlt}
              class="w-64 h-64 lg:w-96 lg:h-96 rounded-full object-cover shadow-gold-lg border-4 border-gold"
            />
          </div>
        )
      }
    </div>
  </div>
</section>
