<footer class="text-white bg-navy-light">
  <div class="container flex flex-col items-center justify-between py-12 px-4 mx-auto lg:flex-row lg:px-8">
    <!-- Left: Copyright and Links -->
    <div class="mb-8 lg:mb-0">
      <div class="mb-2 text-lg">Copyright {currentYear}. All rights reserved.</div>
      <div class="flex space-x-4">
        <a href="/rss.xml" class="font-normal text-white hover:text-gold transition-colors no-underline">
          RSS Feed
        </a>
        <span class="text-gray-400">|</span>
        <a href="/sitemap.xml" class="font-normal text-white hover:text-gold transition-colors no-underline">
          Sitemap
        </a>
      </div>
    </div>

    <!-- Right: Social Links -->
    <ul class="flex items-center space-x-8">
      {
        socialLinks.map((social) => (
          <li>
            <a
              href={social.href}
              target={social.href.startsWith('http') ? '_blank' : undefined}
              rel={social.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              class="text-white hover:text-gold transition-colors"
              aria-label={social.name}
            >
              <svg
                width="26"
                height="24"
                fill="currentColor"
                xmlns="http://www.w3.org/2000/svg"
                viewBox={social.viewBox}
                class="w-6 h-6"
              >
                <path d={social.icon} fill-rule="nonzero" />
              </svg>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</footer>

<style>
  /* Remove default link styling for footer */
  footer a {
    text-decoration: none;
  }

  footer a:hover {
    text-decoration: none;
  }
</style>
