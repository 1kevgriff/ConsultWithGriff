---
// Footer component with Navy + Gold design system
// Azure Steel background (#1B3C59) with white text and gold hover states
import { Icon } from 'astro-icon/components';

const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'Email',
    href: 'mailto:hello@consultwithgriff.com',
    icon: 'fa6-solid:envelope',
  },
  {
    name: 'X',
    href: 'https://twitter.com/1kevgriff',
    icon: 'fa6-brands:x-twitter',
  },
  {
    name: 'Bluesky',
    href: 'https://bsky.app/profile/consultwithgriff.com',
    icon: 'fa6-brands:bluesky',
  },
  {
    name: 'LinkedIn',
    href: 'https://www.linkedin.com/in/1kevgriff/',
    icon: 'fa6-brands:linkedin',
  },
  {
    name: 'GitHub',
    href: 'https://github.com/1kevgriff',
    icon: 'fa6-brands:github',
  },
  {
    name: 'YouTube',
    href: 'https://youtube.com/swiftkick',
    icon: 'fa6-brands:youtube',
  },
  {
    name: 'Sessionize',
    href: 'https://sessionize.com/kevingriffin/',
    icon: 'fa6-solid:microphone',
  },
];
---

<footer class="text-white bg-navy-light">
  <div
    class="container flex flex-col items-center justify-between py-12 px-4 mx-auto lg:flex-row lg:px-8"
  >
    <!-- Left: Copyright and Links -->
    <div class="mb-8 lg:mb-0">
      <div class="mb-2 text-lg">Copyright {currentYear}. All rights reserved.</div>
      <div class="flex space-x-4">
        <a
          href="/rss.xml"
          class="font-normal !text-white hover:!text-gold transition-colors no-underline"
        >
          RSS Feed
        </a>
        <span class="text-gray-400">|</span>
        <a
          href="/sitemap-index.xml"
          class="font-normal !text-white hover:!text-gold transition-colors no-underline"
        >
          Sitemap
        </a>
      </div>
    </div>

    <!-- Right: Social Links -->
    <ul class="flex items-center space-x-8">
      {
        socialLinks.map((social) => (
          <li>
            <a
              href={social.href}
              target={social.href.startsWith('http') ? '_blank' : undefined}
              rel={social.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              class="!text-white hover:!text-gold transition-colors"
              aria-label={social.name}
            >
              <Icon name={social.icon} class="w-6 h-6" />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</footer>

<style>
  /* Override global link styling for footer */
  footer a {
    color: white;
    text-decoration: none;
  }

  footer a:hover {
    text-decoration: none;
  }
</style>
