---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-white shadow-md py-2 px-4">
	<nav class="flex justify-between items-center">
		<h2 class="text-lg mb-0"><a href="/" class="text-black no-underline hover:no-underline"> {SITE_TITLE} </a></h2>
		<div class="flex space-x-4">
			<HeaderLink href="/" class="py-2 px-1 text-black border-b-4 border-transparent hover:border-current">Home</HeaderLink>
			<HeaderLink href="/articles" class="py-2 px-1 text-black border-b-4 border-transparent hover:border-current">Articles</HeaderLink>
			<HeaderLink href="/courses" class="py-2 px-1 text-black border-b-4 border-transparent hover:border-current">Courses</HeaderLink>
		</div>
	</nav>
</header>
